{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.6",
  "autoupdate": true,
  "agent": {
    "build": {
      "model": "github-copilot/claude-sonnet-4.6",
    },
    "plan": {
      "model": "github-copilot/claude-opus-4.6",
      "permission": {
        "edit": "ask"
      }
    },
    "chat": {
      "model": "github-copilot/gpt-5-mini",
      "description": "An agent for general chat interactions. Suitable for real-time conversations and quick responses.",
      "prompt": "{file:./prompts/chat.txt}",
      "mode": "primary",
      "tempature": 0.5,
      "permission": {
        "edit": "deny",
        "bash": "ask"
      }
    },
    "code-review": {
      "model": "github-copilot/claude-sonnet-4.6",
      "description": "An agent specialized in code review and analysis. Ideal for providing detailed feedback on code quality, style, and potential issues.",
      "prompt": "{file:./prompts/code-review.txt}",
      "mode": "subagent",
      "tempature": 0.2,
      "permission": {
        "edit": "deny",
      }
    }
  },
  "mcp": {
    "hub": {
      "enabled": true,
      "type": "remote",
      "url": "http://localhost:37373/mcp",
      "headers": {}
    }
  }
}
